SIM_ROOT ?= $(CURDIR)/../../../

CC=mpicc

#CFLAGS := -O3 -pthread -D_POSIX_C_SOURCE=200112 
CFLAGS := -g3 -pthread -D_POSIX_C_SOURCE=200112 -m32
CFLAGS := $(CFLAGS) -Wall -W -Wmissing-prototypes -Wmissing-declarations -Wredundant-decls -Wdisabled-optimization
CFLAGS := $(CFLAGS) -Wpadded -Winline -Wpointer-arith -Wsign-compare -Wendif-labels -m32
LDFLAGS := -lm -b64 -lstdc++ -lpthread -m32 -L$(SIM_ROOT)/lib -lcarbon_sim

BASEDIR := .

# Set to posix to run as normal app
# MACROS := c.m4.null.POSIX

# Set to carbon to run as sim app
# MACROS := c.m4.null.CARBON

M4 := m4 -s -Ulen -Uindex

x = *

$(TARGET): $(OBJS) $(SIM_ROOT)/lib/libcarbon_sim.a
	$(CC) $(OBJS) $(LDFLAGS) -o $(TARGET) 

clean:
	rm -rf *.c *.h *.o $(TARGET)

.SUFFIXES:
.SUFFIXES:	.o .c .C .h .H

.H.h:
	$(M4) $(MACROS) $*.H > $*.h

.C.c:
	$(M4) $(MACROS) $*.C > $*.c

.c.o:
	$(CC) -c $(CFLAGS) $*.c

.C.o:
	$(M4) $(MACROS) $*.C > $*.c
	$(CC) -c $(CFLAGS) $*.c
