TARGET=blackscholes
SOURCES = 

# APP_FLAGS = NUM_THREADS NUM_OPTIONS
# PARSEC HAS FIVE INPUT SIZES
# TEST     :  NUM_OPTIONS=4
# SIMSMALL :  NUM_OPTIONS=4096  <<--- use this for the HPCA paper
# SIMMEDIUM:  NUM_OPTIONS=16384
# SIMLARGE :  NUM_OPTIONS=65536
# NATIVE   :  NUM_OPTIONS=10000000

SIZE ?= 64 # i.e., NUM_OPTIONS
NUM_OPTIONS = $(SIZE)
NUM_THREADS = 32
APP_FLAGS = $(NUM_THREADS) $(NUM_OPTIONS)
CORES = $(shell echo $$(( $(NUM_OPTIONS) + 1 )))

include ../../Makefile.tests
